[Unit]
Description=Announce diamond_1
BindsTo=diamond.1.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/diamond/diamond_1 '{ \"host\": \"%H\", \"version\": \"52c7248a14\" }' --ttl 60;sleep 45;done"
